<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="알레르기명을 입력하세요"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- 안내 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알레르기 선택"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:textColor="#38332d"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="선택한 알레르기가 포함되어 있는 제품인지 자동으로 알려드립니다"
            />

        <!-- 체크박스: 땅콩 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_peanut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥜 땅콩"
                android:minWidth="4dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 우유 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_dairy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥛 유제품"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif"
                />
        </LinearLayout>

        <!-- 체크박스: 글루틴 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_gluten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍚  글루틴"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 달걀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="달걀"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 호두 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_walnuts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="호두"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 아몬드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_almond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아몬드"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 새우 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_shrimp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새우"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 게 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_crab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 참깨 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_sesameSeeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참깨"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 마늘 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_garlic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마늘"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 복숭아 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_peach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복숭아"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 키위 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_kiwi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키위"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 체크박스: 사과 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginStart="10dp">

            <CheckBox
                android:id="@+id/checkBox_apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사과"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/saveAllergyButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="저장"
            android:textSize="28sp"
            android:background="@drawable/rounded_button_background"
            android:layout_marginTop="127dp" />
    </LinearLayout>
</ScrollView>
